programa
{
	
	funcao inicio()
	{
		
		inteiro n, contador=0, soma=0
		
		escreva("Digite um número: ")
		leia(n)

		faca{
			escreva("\n",contador)
			contador = contador +1		
			soma = soma + contador	
		}enquanto(contador<n)
		
		escreva("\n", n, "\n Soma dos algarismos: ", soma)
	}
}
